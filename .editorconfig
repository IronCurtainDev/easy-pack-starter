# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# PowerShell scripts require UTF-8 with BOM for Unicode characters in Windows PowerShell 5.1
[*.ps1]
charset = utf-8-bom
end_of_line = crlf

# Shell scripts (bash)
[*.sh]
end_of_line = lf
charset = utf-8

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# PHP files
[*.php]
indent_size = 4

# Blade templates
[*.blade.php]
indent_size = 4
